<article class="suggestion-plat" role="listitem">
	<div class="overflow-hidden rounded-2xl shadow-md ring-1 ring-white/5 bg-white/5 backdrop-blur-sm transition-transform transform hover:-translate-y-1 hover:shadow-2xl h-full flex flex-col">
		<div class="p-5 md:p-6 flex gap-4 items-start min-h-[96px] w-full {% if not plat.thumbnail %}justify-center text-center{% endif %}">
			{% if plat.thumbnail %}
				<div class="w-24 h-20 md:w-28 md:h-24 rounded-lg overflow-hidden flex-shrink-0 bg-gray-100/10">
					<img src="{{ plat.thumbnail.src }}" alt="{{ plat.title }}" loading="lazy" class="w-full h-full object-cover"/>
				</div>
				<div class="flex-1 flex flex-col justify-center h-full">
					<h3 class="text-base md:text-lg text-ms-gold">{{ plat.title }}</h3>
					{% if plat.excerpt %}
						<p class="mt-1 text-sm text-gray-300 overflow-hidden">{{ plat.excerpt }}</p>
					{% endif %}
				</div>
			{% else %}
				<div class="w-full h-full flex flex-col justify-center">
					<h3 class="text-base md:text-lg text-ms-gold">{{ plat.title }}</h3>
					{% if plat.excerpt %}
						<p class="mt-1 text-sm text-gray-300 mx-auto max-w-prose">{{ plat.excerpt }}</p>
					{% endif %}
				</div>
			{% endif %}
		</div>
	</div>
</article>
