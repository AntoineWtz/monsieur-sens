{% extends "base.twig" %}

{% block content %}
    <!-- Hero Section -->
    <section class="hero min-h-screen flex items-center justify-center bg-gradient-to-br from-slate-900 to-slate-800 text-white">
        <div class="container mx-auto px-4 text-center">
            <h1 class="text-5xl md:text-6xl font-bold mb-6">{{ site.name }}</h1>
            <p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-2xl mx-auto">{{ post.excerpt }}</p>
            <a href="#" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-8 rounded-lg transition duration-300">
                Découvrir plus
            </a>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features py-20 bg-white">
        <div class="container mx-auto px-4">
            <h2 class="text-4xl font-bold text-center mb-12 text-slate-900">Nos Services</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {% for i in 1..3 %}
                    <div class="feature-card p-8 bg-gray-50 rounded-lg shadow-md hover:shadow-lg transition">
                        <div class="w-16 h-16 bg-blue-600 rounded-full mb-6"></div>
                        <h3 class="text-2xl font-semibold mb-4 text-slate-900">Service {{ i }}</h3>
                        <p class="text-gray-600">Description du service avec détails pertinents.</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta py-16 bg-blue-600 text-white">
        <div class="container mx-auto px-4 text-center">
            <h2 class="text-3xl font-bold mb-6">Prêt à commencer ?</h2>
            <a href="/contact" class="inline-block bg-white text-blue-600 font-semibold py-3 px-8 rounded-lg hover:bg-gray-100 transition">
                Nous contacter
            </a>
        </div>
    </section>
{% endblock %}